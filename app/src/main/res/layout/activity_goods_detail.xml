<?xml version="1.0" encoding="utf-8"?>
<com.example.qsr.fav_deal.ui.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.qsr.fav_deal.activities.GoodsDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/demo4" />

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="大连巨峰葡萄"
                android:textColor="#0e0e0e"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/goods_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="香甜多汁，抗氧化能手"
                android:textColor="#666464"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/mem_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员价:￥6.923/份"
                    android:textColor="#ef1010"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/mem_price"
                    android:layout_alignLeft="@+id/mem_price"
                    android:layout_alignRight="@+id/mem_price"
                    android:layout_alignTop="@+id/mem_price"
                    android:src="@drawable/bg_price" />

                <TextView
                    android:id="@+id/nor_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/mem_price"
                    android:layout_below="@+id/mem_price"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="非会员价:￥6.99/份"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="#979696" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#979696"
                android:padding="5dp"
                android:text="商品详情"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/detailPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.example.qsr.fav_deal.ui.MyScrollView>
