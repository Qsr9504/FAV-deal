<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.qsr.fav_deal.activities.DeliverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/t_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:minWidth="54dp"
                android:src="@drawable/left" />

            <TextView
                android:id="@+id/t_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/title_text"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/t_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:minWidth="54dp"
                android:src="@drawable/my_setting_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/title_text" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/deliver_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
